<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidDesignStyle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/textColorPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/textColorPrimary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/CustomToolBarStyle</item>
        <item name="searchViewStyle">@style/CustomSearch</item>

    </style>

    <style name="CustomToolBarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="titleTextColor">@color/textColorPrimary</item>
        <item name="iconTint">@color/textColorPrimary</item>
    </style>

    <style name="CustomSearch" parent="@style/Widget.AppCompat.SearchView">
        <item name="iconTint">@color/textColorPrimary</item>
    </style>
</resources>